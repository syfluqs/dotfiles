#!/bin/bash

#mini launcher script: codename-o v0.5

#some standard paths
docs='/home/knoppix/Documents/'
pics='/home/knoppix/Pictures/'
git=${docs}'git/'

#checking out the parameters
case $1 in
   "aw") sudo echo 'exec awesome'> /home/knoppix/.xinitrc &;;
   "lx") sudo echo 'exec lxsession'> /home/knoppix/.xinitrc &;;
   "blby") blobby &;;
   "ff") /home/knoppix/scripts/firefox/firefox/firefox &;;
   "lock") xscreensaver-command --lock &;;
   "alsa") lxterminal -e alsamixer &;;
   "f") pcmanfm &;;
   "neon") sudo pon dsl-provider;;
   "neof") sudo poff -a;;
   "gc") google-chrome &;;
   "docs") pcmanfm $docs.$2 &;;
   "pics") pcmanfm $pics.$2 &;;
   "edit") sudo gedit /usr/local/sbin/o &;;
   "open") sudo pcmanfm /usr/local/sbin/ &;;
   "git") pcmanfm ${git}${2} &;;
   *) $1 $2 $3 $4 $5 $6 $7 $8 $9 &;;
esac
